---
import Card from '../components/Card.astro';
import Carroussel from '../components/Carroussel.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Heading from '../components/Heading.astro';
import HighlightCard from '../components/HighlightCard.astro';
import LinkButton from '../components/LinkButton.astro';
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Vama Industrial',
    tags: [
      { hexTag: 'FF5733', textTag: 'CMS' },
    ],
    description: 'Veja como facilitamos a vida do time de marketing para a inserção de novos maquinários dessa gigante da indústria automobilística.',
    primaryHref: '/manutencao',
    tertiaryHref: 'https://vama.com.br',
	img: '/images/thumbs/thumb-vama.png'
  },
  {
    title: 'Morada Reiss',
    tags: [
      { hexTag: 'F9C367', textTag: 'Landing Page' },
    ],
    description: 'Conheça a solução em formato de Landing Page para o lindo e bucólico habitacional da FirmaOito, a Morada Reiss.',
    primaryHref: '/manutencao',
    tertiaryHref: 'www.firmaoito.com.br/moradareiss',
	img: '/images/thumbs/Thumbnail - Morada Reiss.png'
  },
  {
    title: 'Evus',
    tags: [
      { hexTag: 'DE560B', textTag: 'Landing Page' },
    ],
    description: 'Uma landing page para uma marca que fornece insumos para times de futebol, profissionais e amador, da região de Joinville',
    primaryHref: '/manutencao',
    tertiaryHref: 'https://somosevus.com.br/',
	img: '/images/thumbs/Thumbnail - Evus.png'
  }
];
---

<Layout title="Conheça: Atomoon">
	<Header/>
	
	<main class="w-full h-[100vh] bg-gradient-to-t from-[#090A11] to-[#141624] overflow-hidden mt-0 lg:pt-16 pt-8">
		<div class="bg-[url('/images/background-img-hero.png')] h-[100vh] w-full bg-center bg-cover flex items-center justify-center overflow-hidden">
			<div class="flex flex-col items-center gap-4 w-full lg:lg:px-64 px-8">
				<div class="rounded-full px-4 py-1 bg-[#fbba4bc4] border-[#FFE2B0] border-[0.025rem] h-fit w-fit overflow-visible relative">
					<Heading level={6} text="+ de 30 clientes satisfeitos" class="text-xs"/>
          			<div class="bg-[#ffe2b054] animate-pulse w-full h-full blur-xl top-0 left-0 absolute opacity-5"></div>
				</div>

				<Heading level={1} text="Solução de problemas" class="text-center w-full text-4xl" />
				<Heading level={1} text="do micro ao macro." class="text-3xl text-center" />

				<p class="text-white max-w-[32rem] text-center pt-4 text-balance">Descubra como nossas soluções de UX podem transformar seu website, aplicativo móvel ou desktop.</p>
        
				<div class="flex items-center justify-center gap-4 pt-8 lg:flex-row flex-col">
					<LinkButton text='Quero um orçamento' type='primary' url='https://wa.me/5547996887166?text=Ol%C3%A1%2C%20Vim%20pelo%20site%20da%20Atomoon%2C%20gostaria%20de%20um%20or%C3%A7amento'/>
					<LinkButton text='Quero te conhecer primeiro' type='secondary' url='#'/>
				</div>

				<Carroussel />
			</div>
		</div>
	</main>

	<section class="bg-[rgba(9,10,17,1)]  w-full lg:px-64 px-8 overflow-hidden flex flex-col items-center justify-center lg:gap-16 gap-4 lg:py-16 py-8">
		<div class="flex flex-col items-start justify-start lg:items-center lg:justify-center gap-0 lg:gap-4">
			<Heading level={4} text="Faça seu negócio" />
			<Heading level={4} text="ser relevante e objetivo" class="font-bold text-[#67A1F9]"/>
		</div>

		<div class="w-full flex-wrap lg:flex justify-between lg:gap-2 lg:space-y-0 space-y-4">
			<HighlightCard description='Seja mobile ou desktop, nós desenvolvemos!' iconUrl='/images/icons/lucide_monitor-smartphone.svg' title='Todas as plataformas'/>
			<HighlightCard description='Utilizamos Vue, Next, React, React Native, até mesmo fazemos um CMS em Wordpress.' iconUrl='/images/icons/lucide_code-xml.svg' title='Código'/>
			<HighlightCard description='Nada aqui é feito porque “é bonito”. Focamos na estratégia e na regra do seu negócio.' iconUrl='/images/icons/currency.svg' title='Estratégias'/>
		</div>
	</section>

	<section class="w-full lg:px-64 px-8 flex flex-col items-center justify-center py-16 bg-[rgba(9,10,17,1)] gap-8">
		<div class="flex flex-col items-start justify-start gap-0 lg:gap-2 w-full">
			<Heading level={4} text="Um pouco do nosso trabalho" class="lg:block hidden" />
			<Heading level={4} text="e seus resultados." class="text-[#67A1F9] lg:block hidden" />
			<Heading level={4} text="Um pouco do nosso trabalho e seus resultados." class="lg:hidden block leading-10" />
			<p class="text-white">Conheça o que já entregamos.</p>
		</div>

		<div class="gap-8 flex flex-col items-center justify-center">
			{projects.map(project => (
				<Card 
				  title={project.title}
				  img={project.img}
				  tags={project.tags}
				  description={project.description}
				  primaryHref={project.primaryHref}
				  secondaryHref={project.tertiaryHref}
				/>
			  ))}
		</div> 
		<LinkButton text='Ver todos os projetos' type="primary" url='#'/>
	</section>

	<section class="scroll-smooth w-full lg:px-64 px-8 bg-[rgba(9,10,17,1)] flex flex-col items-center justify-center py-16 overflow-hidden relative bg-[url('/images/bg-form.png')] bg-no-repeat bg-center bg-cover">
		
		<div class="w-full flex lg:flex-row flex-col items-center justify-between py-8">
			<div class="flex flex-col gap-2 items-start justify-start">
					<Heading level={4} text="E porque" />
					<span class="flex text-nowrap gap-0 items-center justify-start text-4xl font-bold text-[#F9C367]">escolher nós? <img src="/images/rocket.png" alt="" class="lg:hidden w-16"> </span> 
				<p class="text-white w-3/4">Consultoria, Análises de usabilidade, desenvolvimento de aplicações simples ou complexas, estamos <strong>preparados para atender desde pequenos a grandes negócios.</strong></p>
			</div>
			<img src="/images/rocket.png" alt="" class="lg:block hidden">
		</div>
		
		<section class="w-full flex-col h-fit flex items-start justify-between py-16 space-y-4 " id="contact">
			
			<!-- <div class="w-full "> -->
				<Heading level={2} text="Decidiu?" />
				<Heading level={5} text="Vem conversar com a gente" class="text-[#F9C367]" />
				<LinkButton text='Solicitar orçamento' type='primary' url='https://wa.me/5547996887166?text=Ol%C3%A1%2C%20Vim%20pelo%20site%20da%20Atomoon%2C%20gostaria%20de%20um%20or%C3%A7amento'/>
			<!-- </div> -->
					
			<!-- <form id="contact" class="flex flex-col gap-6 p-8 border-[rgba(255,255,255,.02)] border-[0.12rem] bg-[rgba(255,255,255,.01)] backdrop-blur-lg w-3/4 rounded-lg"> -->
				<!-- <Input id='name' label='Seu nome' name='name' type={'text'} placeholder='Ex: João da Silva'/> -->
				<!-- <Input id='email' label='Seu E-mail' name='email' type={'text'} placeholder='Ex: mail@mail.com' /> -->
				<!-- <TextArea label='Sua mensagem' name='message' placeholder="Ex: Quero desenvolver um site para meu negócio."> -->
			<!-- </form> -->
		</section>
	</section>

  <Footer />
</Layout>
