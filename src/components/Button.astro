---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
    text: string;
}

const {text, ...attrs} = Astro.props;

---

<div class="py-[0.12rem] w-full h-fit bg-transparent hover:bg-gradient-to-r from-transparent via-[#f9c36734] to-transparent transition-all rounded-2xl group relative  text-white">
    <button class="py-4 px-4 w-full h-fit bg-[#090a115b] group shadow-[inset_0px_-1px_50px_-36px_rgba(249,195,103,1)] rounded-2xl flex items-center justify-center" {...attrs}>
        {text}
    </button>
</div>