---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'textarea'> {
    name: string;
    label: string;
}
const {name, label, ...attrs} = Astro.props
---

<div class="flex flex-col gap-2">
    <label for={name} class="text-white">{label}</label>
    <textarea name={name} class="w-full rounded-md bg-[#18181B] border-[#242426] border-[0.1rem] placeholder:text-[#42424F] p-2 text-white h-48"  {...attrs}/>
</div>