---
import LinkButton from './LinkButton.astro';

interface Props {
	title: string;
	tags: {hexTag: string,textTag: string}[];
	description: string;
	primaryHref: string;
	secondaryHref: string;
	img: string;
}

const { title, description, secondaryHref, primaryHref, tags , img} = Astro.props;
---

<div class="bg-[#0C0D14] flex lg:flex-row flex-col gap-8 lg:p-16 p-4 rounded-lg border-[rgba(255,255,255,0.1)] border-[0.1rem] hover:shadow-2xl hover:scale-105 transition-all duration-500 ">
	<img src={img} class="w-full rounded-xl overflow-hidden "/>
	<div class="flex flex-col items-start justify-center gap-4 w-full">
		<div class="flex flex-wrap gap-4">
			{tags.map(tag => (
				<div style={`background-color: #${tag.hexTag}`} class="w-fit p-2 rounded-full text-white">{tag.textTag}</div>
			  ))}
			  
		  </div>
		<h6 class="text-3xl text-white">{title}</h6>
		<p class="text-lg text-white">{description} </p>
		<div class="flex items-center justify-start w-full gap-4">
			<LinkButton text='Ver projeto' type='primary' url={primaryHref} icon />
			<LinkButton text='Abrir site' type='secondary' url={secondaryHref} target="_blank">
				<img src="/images/icons/external-link.svg" alt="external-link">
			</LinkButton>
		</div>
	</div>
</div>