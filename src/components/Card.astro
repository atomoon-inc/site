---
import PrimaryBtn from './PrimaryBtn.astro';
import TertiaryBtn from './TertiaryBtn.astro';

interface Props {
	title: string;
	tags: {hexTag: string,textTag: string}[];
	description: string;
	primaryHref: string;
	tertiaryHref: string;
	img: string;
}

const { title, description, tertiaryHref,primaryHref, tags , img} = Astro.props;
---

<div class="bg-[#0C0D14] flex gap-8 p-16 rounded-lg border-[rgba(255,255,255,0.1)] border-[0.1rem] hover:shadow-2xl hover:scale-105 transition-all duration-500 ">
	<img src={img} class="w-full rounded-xl overflow-hidden "/>
	<div class="flex flex-col items-start justify-start gap-4 w-full">
		<div class="flex gap-4">
		{tags.map(tag => (
			<div class={`bg-[${tag.hexTag}] w-fit p-2 rounded-full text-white`}>{tag.textTag}</div>
		  ))}
		  </div>
		<h6 class="text-3xl text-white">{title}</h6>
		<p class="text-lg text-white">{description} </p>
		<div class="flex items-center justify-start w-full gap-4">
			<PrimaryBtn text='Ver projeto' url={primaryHref} icon />
			<TertiaryBtn text='Abrir site' url={tertiaryHref}>
			<img src="/images/icons/external-link.svg" alt="external-link">
			</TertiaryBtn>
		</div>
	</div>
</div>